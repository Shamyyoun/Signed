<resources>

    <style name="text_filed">
        <item name="android:background">@drawable/text_field</item>
        <item name="android:textSize">@dimen/form_com_text_size</item>
        <item name="android:paddingLeft">@dimen/form_com_padding_lr</item>
        <item name="android:paddingRight">@dimen/form_com_padding_lr</item>
        <item name="android:paddingTop">@dimen/form_com_padding_tb</item>
        <item name="android:paddingBottom">@dimen/form_com_padding_tb</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="form_button">
        <item name="android:background">@drawable/form_button</item>
        <item name="android:textSize">@dimen/form_com_text_size</item>
        <item name="android:padding">@dimen/form_com_padding_lr</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="header_text">
        <item name="android:layout_marginTop">@dimen/header_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/header_text_margin</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="horizontal_seperator">
        <item name="android:background">@color/blue</item>
        <item name="android:layout_margin">@dimen/horizontal_seperator_margin</item>
    </style>

    <style name="log_text">
        <item name="android:padding">@dimen/log_text_padding</item>
        <item name="android:textSize">@dimen/log_text_size</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="top_panel_text">
        <item name="android:paddingLeft">@dimen/top_panel_text_padding_lr</item>
        <item name="android:paddingRight">@dimen/top_panel_text_padding_lr</item>
        <item name="android:paddingTop">@dimen/top_panel_text_padding_tb</item>
        <item name="android:paddingBottom">@dimen/top_panel_text_padding_tb</item>
        <item name="android:background">@drawable/time_panel</item>
        <item name="android:textSize">@dimen/top_panel_text_size</item>
    </style>
</resources>
